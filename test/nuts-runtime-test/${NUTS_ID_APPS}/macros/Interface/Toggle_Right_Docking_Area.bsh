 */

toggleRightDockingArea()
{
	dockarea = view.getDockableWindowManager().getRightDockingArea();
	if(dockarea.getCurrent() == null)
		dockarea.showMostRecent();
	else
		dockarea.show(null);
	view.getTextArea().requestFocus();
}

toggleRightDockingArea();

