// begin browse_buffer_dir
void Browse_Buffer_Directory()
{
	path = buffer.getPath();
	if(path != null) {
		VFSBrowser.browseDirectory(view, MiscUtilities.getParentOfPath(path));
        wm.showDockableWindow("vfs.browser");
    }

}

Browse_Buffer_Directory();

