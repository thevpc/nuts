<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Dnuts.debug=true -classpath %classpath
                net.thevpc.nuts.toolbox.docusaurustoasciidoctor.DocusaurusToAsciidoctorMain</exec.args>
            <exec.executable>java</exec.executable>
            <exec.workingdir>/data/private/work-local/clients/pwc/standards/coding-standards/</exec.workingdir>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -Dnuts.debug=true -classpath
                %classpath net.thevpc.nuts.toolbox.docusaurustoasciidoctor.DocusaurusToAsciidoctorMain</exec.args>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
            <exec.workingdir>/data/private/work-local/clients/pwc/standards/coding-standards/</exec.workingdir>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Dnuts.debug=true -classpath %classpath
                net.thevpc.nuts.toolbox.docusaurustoasciidoctor.DocusaurusToAsciidoctorMain</exec.args>
            <exec.executable>java</exec.executable>
            <exec.workingdir>/data/private/work-local/clients/pwc/standards/coding-standards/</exec.workingdir>
        </properties>
    </action>
</actions>
