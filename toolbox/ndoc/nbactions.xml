<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Dnuts.debug=true -classpath %classpath net.vpc.toolbox.ndoc.NDocMain -s
                /data/public/git/nuts/nuts -t /data/public/git/nuts/website/nuts/docs/javadocs</exec.args>
            <exec.executable>java</exec.executable>
            <exec.workingdir>/data/public/git/nuts/nuts</exec.workingdir>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address} -Dnuts.debug=true -classpath
                %classpath net.vpc.toolbox.ndoc.NDocMain -s /data/public/git/nuts/nuts -t
                /data/public/git/nuts/website/nuts/docs/javadocs</exec.args>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
            <exec.workingdir>/data/public/git/nuts/nuts</exec.workingdir>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Dnuts.debug=true -classpath %classpath net.vpc.toolbox.ndoc.NDocMain -s
                /data/public/git/nuts/nuts -t /data/public/git/nuts/website/nuts/docs/javadocs</exec.args>
            <exec.executable>java</exec.executable>
            <exec.workingdir>/data/public/git/nuts/nuts</exec.workingdir>
        </properties>
    </action>
</actions>
